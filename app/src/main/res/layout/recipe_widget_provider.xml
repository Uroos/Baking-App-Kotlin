<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/recipe_widget_name"
        style="@style/WidgetRecipeName"
        tools:text="recipe name"/>

    <TextView
        android:id="@+id/recipe_widget_text"
        style="@style/WidgetRecipeIngredients"
        tools:text="Recipes will be displayed here." />

</LinearLayout>