<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Toolbar theme-->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- Horizontal Divider-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <!-- Progress bar setting.-->
    <style name="RedAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <!-- Fragment MasterList. -->
    <style name="RecyclerViewMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding8</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="ErrorMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:padding">@dimen/padding16</item>
        <item name="android:text">@string/error_message</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">@dimen/progressbarwidth</item>
        <item name="android:layout_height">@dimen/progressbarheight</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:theme">@style/RedAccent</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!-- Fragment RecipeStep. -->
    <style name="RecipeName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">@dimen/margin4</item>
        <item name="android:layout_marginRight">@dimen/margin4</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_24</item>
    </style>

    <style name="Ingredients">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/margin4</item>
        <item name="android:layout_weight">5</item>
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:freezesText">true</item>
        <item name="android:padding">@dimen/padding8</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textStyle">normal</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="RecyclerViewSteps">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="FloatingActionButton">
        <item name="android:layout_width">@dimen/fabwidth</item>
        <item name="android:layout_height">@dimen/fabheight</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:contentDescription">@string/fab_text</item>
        <item name="android:layout_marginRight">@dimen/margin8</item>
        <item name="android:layout_marginTop">@dimen/margin8</item>
        <item name="android:background">@drawable/button_favorite</item>
        <item name="android:src">@drawable/ic_action_heart</item>
    </style>

    <!-- Fragment RecipeStepDescription. -->
    <style name="RecipeStepDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/screenBackgroundGrey</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:padding">@dimen/padding8</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- RecipeItem Style. -->
    <style name="RecipeImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">175dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="RecipeNameMain">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_24</item>
    </style>

    <!-- RecipeStepItem Style. -->
    <style name="RecipeStepItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height80</item>
        <item name="android:background">@drawable/grid_color_selector</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:freezesText">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding8</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <!-- Widget Style. -->
    <style name="WidgetRecipeName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding8</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_24</item>

    </style>

    <style name="WidgetRecipeIngredients">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">@dimen/margin4</item>
        <item name="android:background">@color/white</item>
        <item name="android:contentDescription">@string/appwidget_text</item>
        <item name="android:padding">@dimen/padding4</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Tablet Style. -->
    <style name="LeftPane">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/margin4</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="RightPaneVideo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="RightPaneDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:visibility">visible</item>
    </style>
</resources>
